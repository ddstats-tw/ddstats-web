{% extends "templates/base.njk" %}
{% import "components/list.njk" as list %}
{% import "components/utils.njk" as utils %}

{% block head %}
	<link rel="stylesheet" type="text/css" href="/assets/css/app.css">
	<title>Leaderboard | Worst times | DDStats</title>
{% endblock %}

{% block main %}
<h1>Leaderboard for the worst times</h1>

<ul class="buttons">
    <li><a class="{{ "active" if category == "Any" }}" href="/leaderboard/worsttimes/category/Any/">Total</a></li>
    <li><a class="{{ "active" if category == "Novice" }}" href="/leaderboard/worsttimes/category/Novice/">Novice</a></li>
    <li><a class="{{ "active" if category == "Moderate" }}" href="/leaderboard/worsttimes/category/Moderate/">Moderate</a></li>
    <li><a class="{{ "active" if category == "Brutal" }}" href="/leaderboard/worsttimes/category/Brutal/">Brutal</a></li>
    <li><a class="{{ "active" if category == "Insane" }}" href="/leaderboard/worsttimes/category/Insane/">Insane</a></li>
    <li><a class="{{ "active" if category == "Dummy" }}" href="/leaderboard/worsttimes/category/Dummy/">Dummy</a></li>
    <li><a class="{{ "active" if category == "DDmaX.Easy" }}" href="/leaderboard/worsttimes/category/DDmaX.Easy/">DDmaX.Easy</a></li>
    <li><a class="{{ "active" if category == "DDmaX.Next" }}" href="/leaderboard/worsttimes/category/DDmaX.Next/">DDmaX.Next</a></li>
    <li><a class="{{ "active" if category == "DDmaX.Pro" }}" href="/leaderboard/worsttimes/category/DDmaX.Pro/">DDmaX.Pro</a></li>
    <li><a class="{{ "active" if category == "DDmaX.Nut" }}" href="/leaderboard/worsttimes/category/DDmaX.Nut/">DDmaX.Nut</a></li>
    <li><a class="{{ "active" if category == "Oldschool" }}" href="/leaderboard/worsttimes/category/Oldschool/">Oldschool</a></li>
    <li><a class="{{ "active" if category == "Solo" }}" href="/leaderboard/worsttimes/category/Solo/">Solo</a></li>
    <li><a class="{{ "active" if category == "Race" }}" href="/leaderboard/worsttimes/category/Race/">Race</a></li>
    <li><a class="{{ "active" if category == "Fun" }}" href="/leaderboard/worsttimes/category/Fun/">Fun</a></li>
</ul>

<table>
    <tbody>
        <tr>
            <th>#</th>
            <th class="wide">Player</th>
            <th class="grey">Map</th>
            <th class="grey">Time (hours)</th>
        </tr>
        {% for player in leaderboard %}
        <tr>
            <td class="rank">{{ player.rank }}</td>
            <td class="wide">{{ player.name }}</td>
            <td class="grey">{{ player.map }}</td>
            <td class="grey">{{ player.worst }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}