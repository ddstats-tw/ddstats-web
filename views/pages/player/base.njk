{% extends "templates/base.njk" %}

{% block head %}
	<script src="/assets/js/sortable.js" defer></script>
	<title>Yumiko | Player Profile | DDStats</title>
{% endblock %}

{% block main %}
    <h1>Yumiko</h1>
    <ul class="buttons">
        <li>
            <a class="active" href="overview">Overview</a>
        </li>
        <li>
            <a href="overview">Playtime</a>
        </li>
        <li>
            <a href="overview">Rank 1s</a>
        </li>
    </ul>
    <div class="block">
        <h2>Novice</h2>
        <table class="sortable">
        <thead>
            <tr>
                <th id="default-sort" class="wide dir-u">Map</th>
                <th>Time</th>
                <th>Rank</th>
                <th>Team Rank</th>
                <th>Playtime</th>
            </tr>
        </thead>
        <tbody>
            {% for rank in rankings %}
                <tr>
                    <td>{{ rank.Map}}</td>
                    <td>{{ rank.Time }}</td>
                    <td>{{ rank.Rank }}<sup>{{ ordinal(rank.Rank) }}</sup></td>
                    {% if rank.Teamrank %}
                    <td>{{ rank.Teamrank }}<sup>{{ ordinal(rank.Teamrank) }}</sup></td>
                    {% else %}
                    <td></td>
                    {% endif %}
                    <td>0 hours</td>
                </tr>
            {% endfor %}
        </tbody>
        </table>

    </div>
{% endblock %}